{
  "compilerOptions": {
    "strict": true,
    "outDir": "dist",
    "lib": ["ESNext"],
    "target": "ESNEXT",
    "module": "commonjs",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
