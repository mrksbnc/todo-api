{
  "compilerOptions": {
    "strict": true,
    "outDir": "dist",
    "lib": ["ESNext"],
    "target": "ESNEXT",
    "module": "commonjs",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "*": ["node_modules/", "src/types/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
